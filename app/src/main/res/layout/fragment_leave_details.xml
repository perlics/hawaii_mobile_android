<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_below="@id/border_line"
        android:id="@+id/type_of_leave"
        android:text="Type of Leave"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinner_leave"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_below="@id/border_line"
        android:layout_width="wrap_content"
        android:entries="@array/leave_reasons"
        android:layout_height="wrap_content">
    </Spinner>

    <TextView
        android:id="@+id/startDate_text"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:text="Start Date"
        android:layout_below="@id/type_of_leave"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/startDate"
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:text="13/05/2018"
        android:layout_toEndOf="@id/startDate_text"
        android:layout_below="@id/type_of_leave"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/endDate_text"
        android:layout_toEndOf="@id/startDate"
        android:layout_marginRight="10dp"
        android:text="End Date"
        android:layout_width="wrap_content"
        android:layout_below="@id/type_of_leave"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:text="13/03/2018"
        android:layout_below="@id/type_of_leave"
        android:layout_toEndOf="@id/endDate_text"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/startDate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/fullDay"
            android:checked="true"
            android:text="Full Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RadioButton
            android:text="Morning Only"
            android:id="@+id/morningOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:text="Afternoon Only"
            android:id="@+id/afternoonOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>

    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:background="#000"
        android:layout_below="@id/radioGroup"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        android:layout_height="2dp">
    </View>

    <TextView
        android:id="@+id/notes_text"
        android:text="Notes"
        android:layout_below="@id/border"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/notes"
        android:layout_below="@id/notes_text"
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/next"
        android:text="Next"
        android:layout_below="@id/notes"
        android:textColor="@color/colorAccent"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>