<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/type_of_bonus_days"
        android:text="Type of Bonus Days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/startDateBonus_text"
        android:text="Start Date"
        android:layout_below="@id/type_of_bonus_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/startDateBonus"
        android:text="15 Jun 2018"
        android:layout_toEndOf="@id/startDateBonus_text"
        android:layout_width="wrap_content"
        android:layout_below="@id/type_of_bonus_days"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/endDateBonus_text"
        android:text="End Date"
        android:layout_toEndOf="@id/startDateBonus"
        android:layout_below="@id/type_of_bonus_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/endDateBonus"
        android:text="20 Jun 2018"
        android:layout_below="@id/type_of_bonus_days"
        android:layout_toEndOf="@id/endDateBonus_text"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/startDateBonus_text"
        android:text="Working Days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>